{
  "hosting": {
    "public": "public",
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    }],
    "headers": [
      {
        "source": "**/*",
        "headers": [{
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }]
      },
      {
        "source" : "**/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=180"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-UA-Compatible",
            "value": "ie=edge"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|ico)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        }]
      },
      {
        "source" : "**/*.@(css|js)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=86400"
        }]
      }
    ]
  }
}
