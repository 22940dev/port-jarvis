{
  "extends": [
    "plugin:compat/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "ecmaVersion": 2018,
    "sourceType": "script",
    "babelOptions": {
      "configFile": "./babel.config.json"
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {},
  "overrides": [{
    "files": ["api/**/*.js"],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "browser": false
    },
    "rules": {
      "compat/compat": "off"
    }
  }],
  "ignorePatterns": ["public/**"]
}
